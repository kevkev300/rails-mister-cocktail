<h2>List of our cocktails</h2>
<%= link_to "Create a new cocktail...", new_cocktail_path, class: "btn btn-success"%>

<div class="cocktails-list">
  <% @cocktails.each do |cocktail| %>
    <div>
      <%= link_to cocktail_path(cocktail), :action => 'go' do %>
      <div class="card-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
      url(<% if cocktail.photo.url.nil? %>
        https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1349&q=80
        <% else %>
        <%= cl_image_path cocktail.photo.url(:thumb) %>
        <% end %>")>
        <%= cocktail.name %>
      </div>
      <% end %>
    </div>
  <% end %>
</div>
