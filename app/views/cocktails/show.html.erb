<%= link_to "< Back to the list", cocktails_path %>

<h2> <%= @cocktail.name %> </h2>
<h4>Ingredients:</h4>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Really deleting it?"} %>
    </li>
  <% end %>
</ul>
</br>
</br>
<h4>Add an ingredient:</h4>
<%= render 'form_dose' %>
